from PIL import Image, ImageDraw
import os

# Root folder for GIF
BASE_DIR = "Old-Bald-Skier-Snow-Reports/vosker"
os.makedirs(BASE_DIR, exist_ok=True)

# Create dummy images
image_paths = []
for i in range(5):
    img = Image.new("RGB", (200, 200), color=(i*50, i*50, 255-i*50))
    draw = ImageDraw.Draw(img)
    draw.text((50, 90), f"Frame {i+1}", fill=(255, 255, 255))
    path = os.path.join(BASE_DIR, f"frame_{i}.jpg")
    img.save(path)
    image_paths.append(path)

# Create GIF
frames = [Image.open(p) for p in image_paths]
gif_path = os.path.join(BASE_DIR, "vosker_timelapse.gif")
frames[0].save(gif_path, save_all=True, append_images=frames[1:], duration=500, loop=0)

print(f"âœ… GIF created: {gif_path}")
print("Files in vosker folder:", os.listdir(BASE_DIR))
