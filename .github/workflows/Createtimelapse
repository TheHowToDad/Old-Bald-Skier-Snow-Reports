name: Run Vosker Timelapse

on:
  workflow_dispatch:

jobs:
  run:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: "3.11"

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Run Vosker timelapse script
      env:
        VOSKER_EMAIL: ${{ secrets.VOSKER_EMAIL }}
        VOSKER_PASSWORD: ${{ secrets.VOSKER_PASSWORD }}
        GITHUB_WORKSPACE: ${{ github.workspace }}
      run: |
        python vosker_timelapse.py

    - name: Debug repo contents
      run: |
        echo "Repo contents after script:"
        ls -R Old-Bald-Skier-Snow-Reports

    - name: Commit generated GIF
      run: |
        git config user.name "github-actions"
        git config user.email "actions@github.com"
        git add Old-Bald-Skier-Snow-Reports/vosker/
        git commit -m "Update Vosker timelapse GIF" || echo "No changes to commit"
        git push
