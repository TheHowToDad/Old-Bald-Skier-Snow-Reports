name: Run Vosker Timelapse

on:
  workflow_dispatch:

jobs:
  run:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: "3.11"

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Run Vosker script
      env:
        VOSKER_EMAIL: ${{ secrets.VOSKER_EMAIL }}
        VOSKER_PASSWORD: ${{ secrets.VOSKER_PASSWORD }}
      run: |
        python vosker_timelapse.py

    - name: Commit generated GIF
      run: |
        git config user.name "github-actions"
        git config user.email "actions@github.com"
        git add vosker/vosker_timelapse.gif || echo "Nothing to add"
        git commit -m "Update Vosker timelapse GIF" || echo "No changes"
        git push
